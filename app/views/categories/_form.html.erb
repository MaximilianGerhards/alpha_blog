<div class="container">
    <%= render 'shared/errors', obj: @category %>

    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with model: @category, data: { turbo: false }, local: true, class: "shadow p-3 bg-primary rounded mb-3" do |f| %>

                <div class="input-group row mb-3">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="input-group d-flex justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>