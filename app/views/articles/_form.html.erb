<div class="container">
    <%= render 'shared/errors', obj: @article %>

    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with model: @article, data: { turbo: false }, local: true, class: "shadow p-3 bg-primary rounded mb-3" do |f| %>

                <div class="input-group row mb-3">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control rounded", placeholder: "Title of Article" %>
                    </div>
                </div>

                <div class="input-group row mb-3">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control rounded", placeholder: "Description" %>
                    </div>
                </div>

                <div class="input-group d-flex justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>

        <div class="mb-3">
            <p><%= link_to 'Cancel and return to list of articles', articles_path, class: "d-flex justify-content-center" %></p>
        </div>
    </div>
</div>