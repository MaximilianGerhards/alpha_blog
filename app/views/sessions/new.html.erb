<h1 class="text-center mt-4">Log in</h1>

<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with scope: :session, url: login_path, data: { turbo: false }, local: true, class: "shadow p-3 bg-primary rounded mb-3" do |f| %>

                <div class="input-group row mb-3">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>

                <div class="input-group row mb-3">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control rounded", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class="input-group d-flex justify-content-center">
                    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>

        <div class="mb-3">
            <p><%= link_to 'Cancel and return to list of articles', articles_path, class: "d-flex justify-content-center" %></p>
        </div>
    </div>
</div>